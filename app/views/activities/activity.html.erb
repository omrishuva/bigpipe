			<%= render 'widgets/ugc/location/widget', 
				  locals: {  
				            widgetName: "location",
				            elementName: "location",
				            objectName: "activities", 
				            objectId: @activity.id,
				            key: "place_id",
				            value: @activity.place_id,
				            state: params[:state],
				            isWidgetOwner: @is_widget_owner,
				            placeholder: "enter_location"            
				          }
						%>
	</div>

	<div class="col-lg-12">
		<div class="dropdown-divider"></div>
		<div class="aboutOrganizer">
			<%= render "users/#{current_direction.to_s}_about_me", locals: { user: @activity.user, isWidgetOwner: false } %>
		</div>
	</div>
</div>