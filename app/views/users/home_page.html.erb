 <div id="imageBackground">
      <%=cl_image_tag("volkswagen-569315_l7hqur.jpg", class:"img-fluid", 
                      transformation: [
                                        { height: 650, width: 1500, crop: "fill", quality: "auto:good"},
                                        { overlay: "text:courier_60_bold_italic:Find%20an%20expert%20to%20plan%20your%20next%20trip", gravity: "north", y: 220, color:"#fff" } ])%>
    </div>

	<div class="homePageContent container">
		<h4 class="activitySubtitle">
			<i class="fa fa-star" aria-hidden="true"></i>
			<%=I18n.t :community_highlights%>
			<i class="fa fa-star" aria-hidden="true"></i>
		</h4>

		
		<% @activities.in_groups_of(2,false) do |activity_group|%>		
			<div class="row">
				<%activity_group.each do |activity|%>
					<div class="col-md-6 gridItem">
						<a href="<%="/activities/#{activity.id}"%>">
							<h4 class="centeredText"><%=activity.title %></h4>
								<%=cl_image_tag(activity.cover_image, width: 500, height: 250, crop: :thumb, gravity: :face, class: "img-fluid", id: "coverImage", secure: true )%>
						</a>
						<%if activity.about_text.present?%>
							<div class=mediumText><%=activity.about_text[0..200].html_safe %></div>
						<%end%>
					</div>
				<%end%>
			</div>
		<%end%>
	</div>
