<div class="row pull-left">
  <span class="lead" ><%="Total: #{@users.size}"%></span>
  <span>|</span>
  <span class="lead"><%="Yesterday: #{@yesterday}"%></span>
</div>

</br></br>
<table class="table table-hover">
  <tr>
    <th>Name</th>
    <th>Joined at</th>
  </tr>
 
  <% @users.each do |user| %>
    <tr>
      <td><%= user.name %></td>
      <td><%= user.created_at %></td>
    </tr>
  <% end %>
</table>
