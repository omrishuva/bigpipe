<div class="container" id="meSectionContainer">	

	<div class="accountMemebers">
			
		<table class="table table-striped sortable" data-toggle="table" id="staffTable">
			<thead>
				<tr>
					<th>Name</th>
					<th>Email</th>
					<th>Phone</th>
					<th>Role</th>
				</tr>
			</thead>
			<tbody>
				<%current_user.current_account.all_members.each do |role,members|%>
					<%if members.present?%>
						<%members.each do|member, index|%>
							<tr>
								<td><a href=<%="/profile/#{member.id}"%>><%=member.name%></td>
								<td><%=member.email%></td>
								<td><%=member.phone%></td>
								<td><%=role.to_s.singularize%></td>
							</tr>
						<%end%>
					<%end%>
				<%end%>
			</tbody>
		</table>

	</div>
	</br>
	<%if current_user.is_account_owner?%>
		<a href="/account_user/new">Invite Team Member</a>
	<%end%>

</div>

