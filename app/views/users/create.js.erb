<%if @user.errors.present?%>
	<%if @embedded_form == 'true'%>
		$('#embeddedSignupTemplate').replaceWith("<%= escape_javascript( render 'shared/components/signup_template', :locals => { user: @user, embedded: @embedded_form }) %>");
	<%else%>
		$('#signupTemplate').replaceWith("<%= escape_javascript( render 'shared/components/signup_template', :locals => { user: @user }) %>");
	<%end%>
<%else %>
	$('#signupModal').modal('hide')
	$('#flashMessages').replaceWith("<%= escape_javascript( render 'shared/form_helpers/flash_messages') %>");
	$('#userSideBar').replaceWith("<%= escape_javascript( render 'shared/components/navigation/user_menu') %>");
	$('#currentUserScript').replaceWith("<%= escape_javascript( render 'shared/data/current_user') %>");
<%end%>