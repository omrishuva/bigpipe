<%id = generate_id %>
<% if locals[:wizardMode].present? %>
	<%locals[:class] = "#{locals[:class]} hidden " %>
	<%if locals[:state] == "save"%>
		<script>
			 document.publishEvent('bindToWizardButton', { 'widgetData': <%=raw(locals.merge(id: id).to_json)%> } );
		</script>	
	<%end%>
<%end%>
<a 
	href="javascript:void(0)"
	onclick='return false;'
	class="widgetControl <%= locals[:class] %>"
	id="<%=id%>"
	data-input-id="<%=locals[:inputId]%>"
	data-state="<%=locals[:state]%>"
	data-submit-on-change="<%=locals[:submitOnChange]%>"
	aria-hidden="true"
>

<%if locals[:image]%>	
	<%=cl_image_tag(locals[:image], class: "imgInButton img-fluid", width: 30, height: 20)%>
<%end%>

<span class="buttonText" style="font-family:'Raleway', sans-serif">
	<%=I18n.t locals[:button_text]%>
</span>

</a>

<script> 
		document.publishEvent('activateButton', { 'widgetData': <%=raw(locals.merge(id: id).to_json)%> } );
</script>