<%["activities", "culture", "nightlife", "accomodation"].each do |tag_group|%>
	<p class="thinUnderline"><%=tag_group.capitalize%></p>
	
		<%= render 'widgets/widget', 
				locals: {  
									widgetName: "tag_select_box",
									elementName: "tagSelectBox",
									objectName: "TripRequest", 
									objectId: @object.id,
									key: "personal_taste",
									selectOptions: TripRequest.metadata["personal_taste"][tag_group],
									value: @object.personal_taste,
									state: "edit",
									isWidgetOwner: true,
									maxSelections: 10,
									wizardMode: true,
									placeholder: "select_10_trip_elements"
								}
		%>
<%end%>