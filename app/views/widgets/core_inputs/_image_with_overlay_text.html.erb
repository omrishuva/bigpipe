<%= render "shared/components/image_tag", locals: locals%>
<%if locals[:overlayText][:enabled] == true%>
	<%= render 'widgets/widget', 
    		locals: {  
    							widgetName: "text_input_box",
    							elementName: "textInputBox",
    							objectName: locals[:overlayText][:objectName], 
    							objectId: locals[:overlayText][:objectId],
    							key: locals[:overlayText][:key],
    							value: locals[:overlayText][:value],
    							state: params[:state],
    							isWidgetOwner: locals[:overlayText][:isWidgetOwner],
    							placeholder: locals[:overlayText][:placeholder],
    							textClass: locals[:overlayText][:textClass],
    							buttonClass: locals[:overlayText][:buttonClass],
                                imageOverlay: true
    							
    						}
    %>
<%else%>
	<%if locals[:overlayTextlinkTo].present?%>
		<a href=<%="#{locals[:overlayTextlinkTo]}"%>>
			<span class="imageOverlayTextWithLink"%><%=locals[:overlayText][:value]%></span>	
		</a>
	<%else%>
		<span class="imageOverlayText"%><%=locals[:overlayText][:value]%></span>	
	<%end%>
<%end%>

<%=render 'widgets/core_inputs/image_upload_button', locals: locals %>