<textarea name=<%="editor" + input_id(locals)%>>
	<%=locals[:value] %>
</textarea>
</br>
<div class="<%="#{current_direction.to_s}"%>" >
	<%=render "widgets/ugc/text/button", 
						locals: locals.merge( 
																	class: "btn btn-success smallBtn", 
																	state: "save", 
																	button_text: "save" )
	%>
	<%=render "widgets/ugc/text/button", 
						locals: locals.merge( 
																	class: "btn btn-danger smallBtn", 
																	state: "cancel", 
																	button_text: "cancel" )
	%>
	
</div>

<script>
	CKEDITOR.replace( "<%='editor' + input_id(locals)%>",{ language: "<%=I18n.locale.to_s%>"} );
</script>