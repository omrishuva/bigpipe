<%if !@user%>
	$('#loginTemplate').replaceWith("<%= escape_javascript( render 'shared/components/login_template') %>");
<%elsif @user.has_phone? && @user.phone_verified %>
	$('#signupModal').modal('hide')
	$("#navItems").replaceWith("<%= escape_javascript( render 'shared/components/navigation/nav_items') %>")
	$('#flashMessages').replaceWith("<%= escape_javascript( render 'shared/form_helpers/flash_messages') %>");
<%else%>
	$("#signUpTemplate, #loginTemplate").replaceWith("<%= escape_javascript( render 'shared/components/enter_phone_template', locals: {user: @user } ) %>")
<%end%>