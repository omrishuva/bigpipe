<% if current_user && current_user.try(:phone_verified) %>
<div class="rtlUserLogin">
	<%=render 'shared/components/navigation/user_dropdown'%>
	<%=render 'shared/components/navigation/rtl_profile_pic'%>
</div>
<%else%>
	<div class="rtlUserLogin">
		<%=render 'shared/components/navigation/user_dropdown'%>
		<a class="btn btnBrandSize btnBrand1 nav-link" data-toggle="modal" data-target="#signupModal">
			<%=I18n.t :sign_in_button%>
		</a>
	</div>
<%end%>