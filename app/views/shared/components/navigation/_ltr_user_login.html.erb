<% if current_user && current_user.try(:phone_verified) %>
<div class="ltrUserLogin">
	<%=render 'shared/components/navigation/ltr_profile_pic'%>
	<%=render 'shared/components/navigation/user_dropdown'%>
</div>
<%else%>
	<div class="ltrUserLogin">
		<a class="btn btnBrand1" data-toggle="modal" data-target="#signupModal">
			<%=I18n.t :sign_in_button%>
		</a>
		<%=render 'shared/components/navigation/user_dropdown'%>
	</div>
<%end%>