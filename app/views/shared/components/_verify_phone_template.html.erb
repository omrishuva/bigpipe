<div id="verifyPhoneTemplate" class="modal-content">
  <%locals ||= {} %>
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
      <h4 class='signInModalTitle centeredText'>We just sent you an SMS</h4>
      <p class="centeredText">
      Please enter the code you received
      </p>
  </div>  
    <div class="modal-body">
    	<form id="verifyPhoneForm" data-remote="true"  action="/authenticate_phone" accept-charset="UTF-8" method="post">	
				<input name="utf8" type="hidden" value="&#x2713;" />
				<%= hidden_field_tag :authenticity_token, form_authenticity_token %>
				<%= render "shared/form_helpers/input_field", locals: {input_type: "text", field_name: "phone_verification_code", user: locals[:user] } %>
				<button type="submit" class="btn btnBrand1 bthPhoneCodeForm">Send</button>
			</form>
  	</div>
</div>