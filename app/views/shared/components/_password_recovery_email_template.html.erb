<div id="PasswordRecoveryEmailTemplate" class="modal-content">
  <%locals ||= {} %>
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
      <h4 class='formModalTitle centeredText'><%=I18n.t :password_recovery_title%></h4>
      <p class="centeredText">
       <%=I18n.t :password_recovery_subtitle%>
      </p>
  </div>  
    <div class="modal-body">
    	<a id="haveAccount"><%= I18n.t :back%></a>
        </br>
        </br>
      <form id="passwordRecoveryEmail" data-remote="true"  action="/authenticate_phone" accept-charset="UTF-8" method="post">	
				<input name="utf8" type="hidden" value="&#x2713;" />
				<%= hidden_field_tag :authenticity_token, form_authenticity_token %>
        <%= render "shared/form_helpers/input_field", 
        locals: { 
                  input_type: "email", 
                  field_name: :email, user: locals[:user] 
                } 
        %>
				<button type="submit" class="btn btnBrand1 bthModalForm"><%= I18n.t :submit %></button>
			</form>
  	</div>
</div>