<div class="btn-group pull-xs-right" role="group" id="loginLogout">
  <% if current_user %>
  		<p class='lead'><%="Signed in as #{current_user.name}" %></p>
  		<button type="button" class="btn btn-secondary"><%=link_to('Logout', '/logout')%> </button>
  <% else %>
	  	<button type="button" class="btn btn-secondary" data-toggle="modal" data-target="#loginModal">Login</button>
      <button type="button" class="btn btn-secondary" data-toggle="modal" data-target="#signupModal">Sign Up</button>
  <%end%>  
</div>

