<div id="signUpTemplate" class="modal-content">
  <%locals ||= {} %>
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
      <h4 class='signInModalTitle centeredText'>Sign Up</h4>
      <p class="centeredText">
        Already a Member of Play? 
        <a id="haveAccount">Sign in</a>
      </p>
      <a class="btn btn-block btn-social btn-facebook centeredText" id="fbSignIn" >
        <span class="fa fa-facebook"></span>
          Connect With Facebook
        </a>
  </div>  
    <p class="centeredText" >or connect via email</p>
    <div class="modal-body">
    	<form id="signUpForm" data-remote="true" action="/signup" accept-charset="UTF-8" method="post">	
				<input name="utf8" type="hidden" value="&#x2713;" />
				<%= hidden_field_tag :authenticity_token, form_authenticity_token %>
				<%= hidden_field_tag "user[auth_provider]", "play" %>
				<%= render "shared/form_helpers/input_field", locals: {input_type: "text", field_name: :name, user: locals[:user] } %>
				<%= render "shared/form_helpers/input_field", locals: {input_type: "phone", field_name: :phone, user: locals[:user] } %>
				<%= render "shared/form_helpers/input_field", locals: {input_type:"email",field_name: :email, user: locals[:user] } %>
				<%= render "shared/form_helpers/input_field", locals: {input_type:"password", field_name: :password, user: locals[:user] } %>
				<button type="submit" class="btn btnBrand1 bthSignUpForm">Sign me up</button>
			</form>
  	</div>
</div>