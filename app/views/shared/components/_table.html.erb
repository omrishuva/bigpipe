<table class="table table-striped sortable" id="<%=locals[:id]%>">
	<thead>
		<tr>
		<%locals[:keys].each do |key|%>
			<th><%=I18n.t key%></th>
		<%end%>
		</tr>
	</thead>
	<tbody>
		<%locals[:values].each do |values_group|%>
			<tr>
				<%values_group.each do |value|%>
					<%if value.class.name == "Hash" && value[:link].present?  %>
						<td><a href="<%=value[:link]%>">Edit</a> </td>
					<%else%>
						<td><%=value%></td>
					<%end%>
				<%end%>
			</tr>
		<%end%>
	</tbody>
</table>