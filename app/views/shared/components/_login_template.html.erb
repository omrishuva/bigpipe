<form action="/login" accept-charset="UTF-8" method="post">
<input name="utf8" type="hidden" value="&#x2713;" />
<%= hidden_field_tag :authenticity_token, form_authenticity_token %>

  <div class="form-group">
    <label for="email" class="form-control-label">Email</label>
    </br>
    <input type="email" name="email" class="form-control-lg ModalInput" id="email" placeholder="Email">
  </div>

  </br>

  <div class="form-group">
    <label for="password" class="form-control-label">Password</label>
    </br>
    <input type="password" name="password" class="form-control-lg ModalInput" id="password" placeholder="Password">
  </div>

  </br>
  <div class="form-group row">
    <div class="col-sm-4">
      <button type="submit" class="btn btn-primary">Sign In</button>
    </div>
    <div class="col-sm-4">
      <a id="dontHaveAccount">I don't have an account</a>
    </div>
  </div>
</form>