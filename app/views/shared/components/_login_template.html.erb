<div id="loginTemplate">
  <form action="/login" id="loginForm" accept-charset="UTF-8" method="post">

    <input name="utf8" type="hidden" value="&#x2713;" />
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>

    <div class="form-group">
      <input type="email" name="email" class="form-control ModalInput" id="email" placeholder="Email">
    </div>

    <div class="form-group">
      <input type="password" name="password" class="form-control ModalInput" id="password" placeholder="Password">
    </div>

    <a id="dontHaveAccount">I don't have an account</a>
    </br>
    </br>
    <button type="submit" class="btn btnBrand1 bthSignUpForm">Sign in</button>
    
  </form>
</div>