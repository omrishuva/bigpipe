<div id="loginTemplate" class="modal-content">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
      <h4 class='formModalTitle centeredText'><%=I18n.t :signin_modal_title%></h4> 
      <p class="centeredText">
        <%=I18n.t :not_a_member_yet%>
        <a id="dontHaveAccount"><%=I18n.t :signup_link%></a>
      </p>
      <a class="btn btn-block btn-social btn-facebook centeredText" id="fbSignIn" >
        <span class="fa fa-facebook"></span>
           <%=I18n.t :login_with_fb%> 
        </a>
  </div>  
    <p class="centeredText" ><%=I18n.t :signin_with_email%>  </p> 
    <div class="modal-body">
    <form action="/login" id="loginForm" accept-charset="UTF-8" method="post">

      <input name="utf8" type="hidden" value="&#x2713;" />
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
      <div class="form-group">
      <input type="email" name="email" 
        class="form-control-sm ModalInput" 
        id="email"
        placeholder="<%= I18n.t :email_input_placeholder%>"
        >
      </div>

      <div class="form-group">
      <input type="password" name="password" 
             class="form-control-sm ModalInput" 
             id="password" 
             placeholder="<%= I18n.t :password_input_placeholder%>"
      >
      
      </br>
       <%= render "shared/form_helpers/flash_messages" %>
       </br>
       <a id="forgotPassword"><%= I18n.t :forgot_password_link%></a>
      </div>
      <button type="submit" class="btn btnBrand1 bthModalForm"><%= I18n.t :sign_in_button%></button>
    </form>
  </div>
</div>